{
    "name": "DevTools autosave",
    "version": "1.1.3",
    "description": "Pushes changes in CSS and JS files to the server",

    "devtools_page": "devtools.html",
    "background": {
        "scripts": ["background.js"]
    },
    "options_page": "options.html",

    "icons": {
        "16": "icon_16.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },

    "permissions": [
        "experimental",
        "notifications",
        "http://*/"
    ],

    "update_url": "http://userscripts.ru/js/chrome-devtools-autosave/update.xml",
    "manifest_version": 2,
    "minimum_chrome_version": "17"
}
